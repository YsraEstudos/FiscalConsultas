# AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_api_key_here

# Server
SERVER__ENV=development

# Database (PostgreSQL)
POSTGRES_USER=change_me
POSTGRES_PASSWORD=change_me
POSTGRES_DB=nesh_db
DATABASE__ENGINE=postgresql
DATABASE__POSTGRES_URL=postgresql+asyncpg://change_me:change_me@localhost:5432/nesh_db

# pgAdmin (Docker Compose local)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_me

# Clerk (Backend JWT validation)
AUTH__CLERK_DOMAIN=your-app.clerk.accounts.dev
# Opcional: força validação explícita de issuer (recomendado)
AUTH__CLERK_ISSUER=https://your-app.clerk.accounts.dev
# Recomendada para comentários Clerk (template backend_api)
AUTH__CLERK_AUDIENCE=fiscal-api
# Recomendada para validar azp no frontend local
AUTH__CLERK_AUTHORIZED_PARTIES=["http://localhost:5173","http://127.0.0.1:5173"]
# Tolerância para clock skew (exp/iat/nbf). Recomendado: 120 em dev local.
AUTH__CLERK_CLOCK_SKEW_SECONDS=120

# Billing (Asaas)
BILLING__ASAAS_API_KEY=change_me
BILLING__ASAAS_WEBHOOK_TOKEN=change_me

# Frontend (Vite) - coloque também em client/.env.local se preferir
VITE_API_URL=http://localhost:8000
VITE_CLERK_PUBLISHABLE_KEY=pk_test_change_me
VITE_CLERK_TOKEN_TEMPLATE=backend_api
VITE_AUTH_DEBUG=false
